<div class= "top">
  <div class= "container top-form">
    <div class="form-field">
      <h1>アカウント登録</h1>
      <div class="device-inner">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field fa-solid fa-user">
            <%= f.text_field :name, placeholder: "名前" %>
          </div>

          <div class="field fa-solid fa-envelope">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="field fa-solid fa-lock">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
          </div>

          <div class="field fa-solid fa-check-double">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認用" %>
          </div>

          <div class="actions">
            <%= f.submit "新しいアカウントを作成", class: "btn-primary btn form-control" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
