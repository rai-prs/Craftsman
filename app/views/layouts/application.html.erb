<!DOCTYPE html>
<html>
  <head>
    <title>Craftsman</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/87de6304b2.js" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-inner">
        <div class="header-left-nav">
          <%= link_to "CraftsMan", root_path, class: "mx-3 link title" %>
        </div>
        <div class="header-right-nav">
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary mx-3 my-2" %>
          <%= link_to "登録する", new_user_registration_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
